<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>Registration Page</title>
  </head>
  <body>
    <form action="/registration" method="post">
      <table>
        <thead>
          <tr>
            <td colspan="2"><h1>Registration</h1></td>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>First Name : </td>
            <td><input type="text" name="firstName" placeholder="Enter First Name"></td>
            <td>Last Name : </td>
            <td><input type="text" name="lastName" placeholder="Enter Last Name"></td>
          </tr>
          <tr>
            <td>E-Mail : </td>
            <td><input type="email" name="email" placeholder="Enter Email"></td>
            <td>Mobile : </td>
            <td><input type="text" name="mobile" placeholder="Enter Mobile Number"></td>
          </tr>
          <tr>
            <td>Password : </td>
            <td><input type="password" name="password" class="password" placeholder="********"></td>
            <td>Confirm Password : </td>
            <td><input type="password" name="cpassword" class="cpassword" placeholder="*********"></td>
          </tr>
          <tr>
            <td>City : </td>
            <td><input type="text" name="city" placeholder="Enter City"></td>
            <td>State : </td>
            <td><input type="text" name="state" placeholder="Enter State"></td>
          </tr>
          <tr>
            <td>Country : </td>
            <td><input type="text" name="country" placeholder="Enter Country"></td>
            <td>PIN : </td>
            <td><input type="text" name="pin" placeholder="Enter PIN"></td>
          </tr>
        </tbody>
        <tfoot>
          <tr>
            <td><button type="submit" class="btn btn-success btn_register">Register</button></td>
            <td><a href="/"><button type="button" class="btn btn-danger">Back</button></a></td>
          </tr>
        </tfoot>
      </table>
    </form>
    <table>
      <tr>
        <td>Message:</td>
        <td>
          <% if(msg!="") {%>
            <%= msg %>
          <% } %>
        </td>
      </tr>
    </table>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="/JS/index.css" charset="utf-8"></script>
  </body>
</html>
